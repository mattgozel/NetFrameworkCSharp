@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "Edit";
}

    <div class="row">
        <div class="col-md-4">
            @Html.Partial("StudentNav")
        </div>
        <br/><br/><br/><br/>
        <div class="col-md-4">
            <div class="row">
                <div class="col-xs-12">
                    <h3>Edit Student</h3>
                    @Html.ValidationSummary()
                    <div class="row">
                        @using (Html.BeginForm())
                        {
                            @Html.HiddenFor(m => m.Student.StudentId)
                            <div class="col-md-12 col-md-7">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Personal Details</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label>First Name:</label>
                                            @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>Last Name:</label>
                                            @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>Major:</label>
                                            @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control", required = "required" })
                                        </div>
                                        <div class="form-group">
                                            <label>GPA:</label>
                                            @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control", required = "required" })
                                        </div>
                                        <h4>Courses</h4>
                                        <div class="form-group">
                                            @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control", required = "required" })
                                        </div>
                                        <button class="btn btn-primary">Save</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-xs-12">
                    <h3>Edit Address</h3>
                    <div class="row">
                        @using (Html.BeginForm("SaveAddress", "Student", FormMethod.Post, new { }))
                        {
                            @Html.HiddenFor(m => m.Student.StudentId)
                            <div class="col-md-12 col-md-7">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Address Details</h4>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group">
                                            <label>Street 1:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Street 2:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>City:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>State:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.State.StateAbbreviation, new { @class = "form-control" })
                                        </div>
                                        <h4>Postal Code</h4>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                                        </div>
                                        <button class="btn btn-primary" value="SaveAddress">Save</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>



