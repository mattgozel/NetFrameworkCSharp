@model GuildCars.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<br/>
<h2>Add User</h2>

@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class=" row">
        <div class="col form-group">
            <label>First Name</label>
            <p>@Html.TextBoxFor(m => m.FirstName, new { @class = "w-100", required = "required" })
        </div>
        <div class="col form-group">
            <label>First Name</label>
            <p>@Html.TextBoxFor(m => m.LastName, new { @class = "w-100", required = "required" })
        </div>
    </div>
    <div class=" row">
        <div class="col form-group">
            <label>Email</label>
            <p>@Html.TextBoxFor(m => m.Email, new { @class = "w-100", required = "required" })
        </div>
        <div class="col form-group">
            <label>Role</label>
            <p>@Html.DropDownList("UserRole", new SelectList(Model.Roles, "RoleName", "RoleName"), new { @class = "w-100" })</p>
        </div>
    </div>
    <div class=" row">
        <div class="col form-group">
            <label>Password</label>
            <p>@Html.PasswordFor(m => m.Password, new { @class = "w-100", required = "required" })
        </div>
        <div class="col form-group">
            <label>Confirm Password</label>
            <p>@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "w-100", required = "required" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-dark contactLink" value="AddUser" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}