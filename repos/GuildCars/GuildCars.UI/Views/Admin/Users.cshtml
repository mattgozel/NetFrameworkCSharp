@model IEnumerable<GuildCars.Models.QueriesModels.AdminUsers>
@{
    ViewBag.Title = "Users";
}

<br/>
<h2>Users</h2>
<p>@Html.ActionLink("Add a new User", "AddUser", "Admin", null, null)</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.LastName</td>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>@user.RoleName</td>
                <td><a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })">edit</a></td>
            </tr>
        }
    </tbody>
</table>


