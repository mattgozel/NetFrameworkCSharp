@model GuildCars.UI.Models.AdminModelsViewModel
@{
    ViewBag.Title = "Models";
}

<br />
<h2>Models</h2>
<div class="bigbox">
    <br />

    @using (Html.BeginForm("Models", "Admin", FormMethod.Post))
    {
        <div class="form-row">
            <div class="col">
                <strong><label>New Model</label></strong>
            </div>
            <div class="col">
                @Html.TextBoxFor(m => m.CarModel.Model, new { @class = "form-control", required = "required" })
            </div>
            <div class="col">
                @Html.DropDownList("CarModel.MakeId", new SelectList(Model.Makes, "MakeId", "Make"), new { @class = "form-control", required = "required"} )
            </div>
            <div class=" col">
                <input type="submit" class="btn btn-dark contactLink form-control" value="Save" />
            </div>
        </div>
    }
</div>
<br />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Date Added</th>
            <th scope="col">User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carModel in Model.ModelTable)
        {
        <tr>
            <td>@carModel.Make</td>
            <td>@carModel.Model</td>
            <td>@carModel.DateAdded.ToString("MM/dd/yyyy")</td>
            <td>@carModel.Email</td>
        </tr>
        }
    </tbody>
</table>

