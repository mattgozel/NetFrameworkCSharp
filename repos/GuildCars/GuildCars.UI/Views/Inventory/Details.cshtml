@model GuildCars.Models.QueriesModels.InventoryDetailsView

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-12">
        <h2>Vehicle Details</h2>
    </div>
</div>

<div class="bigbox">
    <div class="row make-model">
        <div>
            <h3>@Model.Year @Model.Make @Model.Model</h3>
        </div>
    </div>

    <div class="row">
        <div class="col details-pic">
            <img class="featureimg" src="@Url.Content("~/Images/" + Model.ImageFileName)" />
        </div>
        <div class="col">
            <p>
                <strong>Body Style: </strong>
                @Model.BodyStyleName
            </p>
            <p>
                <strong>Trans: </strong>
                @Model.TransmissionName
            </p>
            <p>
                <strong>Color: </strong>
                @Model.ColorName
            </p>
        </div>
        <div class="col">
            <p>
                <strong>Interior: </strong>
                @Model.InteriorName
            </p>
            <p>
                <strong>Mileage: </strong>
                @Model.Mileage
            </p>
            <p>
                <strong>VIN #: </strong>
                @Model.Vin
            </p>
        </div>
        <div class="col">
            <p>
                <strong>Sale Price: </strong>
                @Model.SalePrice.ToString("c")
            </p>
            <p>
                <strong>MSRP: </strong>
                @Model.MSRP.ToString("c")
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-9">
            <p>
                <strong>Description: </strong>
                @Model.Description
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10"></div>
        @if (Model.IsSold == false)
        {
            <div class="col-md-2">
                @Html.ActionLink("Contact Us", "Contact", "Home", new { vin = ViewBag.Vin }, new { @class = "contactLink btn btn-dark" })
            </div>
        }
        @if (Model.IsSold == true)
        {
            <div class="col-md-2">
                <p>Unavailable - Sold</p>
            </div>
        }
    </div>
</div>

