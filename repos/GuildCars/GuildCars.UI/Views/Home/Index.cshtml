@model GuildCars.Models.QueriesModels.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Specials.Count(); i++)
        {
            if (i == 0)
            {
                var firstSpecial = Model.Specials.FirstOrDefault();
                <div class="carousel-item active">
                   <img class="d-block w-100" src="@Url.Content("~/Images/carousel.jpg")" alt="First Slide">
                   <div class="carousel-caption trickcenter">
                       <div><a class="carryLink" href="https://localhost:44359/Home/Specials">@firstSpecial.Title @firstSpecial.Description</a></div>
                   </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Url.Content("~/Images/carousel.jpg")" alt="First Slide">
                    <div class="carousel-caption trickcenter">
                        <div><a class="carryLink" href="https://localhost:44359/Home/Specials">@Model.Specials.ElementAt(i).Title @Model.Specials.ElementAt(i).Description</a></div>
                    </div>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<hr />
<div class="row">
    <div class="col-md-12">
        <h2>Featured Vehicles</h2>
        <br />
    </div>
    @foreach (var vehicle in Model.Featured)
    {
        <div class="col-md-2 divborder blockLink btn btn-outline-dark">
            <a href="@Url.Action("Details", "Inventory", new { id = vehicle.InventoryId })">
                <img class="featureimg" src="@Url.Content("~/Images/" + vehicle.ImageFileName)" />
                <p>@vehicle.Year @vehicle.Make @vehicle.Model</p>
                <p>@vehicle.SalePrice.ToString("c")</p>
            </a>
        </div>

    }
</div>